<div class="page-header">
  <h1>Subscriptions</h1>
</div>

<table class="table table-striped datatable">
  <thead>
    <tr>
      <th>Email</th>
      <th>Topic</th>
      <th class="hiddenResult"></th>
      <th class="hiddenResult"></th>
      <th class="hiddenResult"></th>
    </tr>
  </thead>

  <tbody>
    <% @subscriptions.each do |subscription| %>
      <tr>
        <td><%= subscription.email %></td>
        <td><%= subscription.topic.name %></td>
        <td><%= link_to 'Show', subscription, :class => "btn btn-xs btn-primary" %></td>
        <td><%= link_to 'Edit', edit_subscription_path(subscription), :class => "btn btn-xs btn-primary" %></td>
        <td><%= link_to 'Destroy', subscription, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-xs btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Subscription', new_subscription_path, :class => "btn btn-primary" %>
